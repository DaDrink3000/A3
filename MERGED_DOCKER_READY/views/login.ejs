<h1>Staff Login</h1>
<% if (typeof err === 'string' && err) { %>
  <p class="small" style="color:#b00020;"><%= err %></p>
<% } %>
<form method="POST" action="/auth/login">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
  <div><label>Username</label><br/><input type="text" name="username" required placeholder="admin@aec.local"/></div><br/>
  <div><label>Password</label><br/><input type="password" name="password" required placeholder="Password123!"/></div><br/>
  <div class="actions"><button class="primary" type="submit">Login</button></div>
</form>
<p class="small muted">users: admin@aec.local, manager@aec.local, auditor@aec.local (default password: Password123!)</p>
