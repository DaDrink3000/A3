<h1>Verify MFA</h1>
<% if (typeof err === 'string' && err) { %>
  <p class="small" style="color:#b00020;"><%= err %></p>
<% } %>
<form method="POST" action="/auth/verify-mfa">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
  <label>Authenticator Code</label><br/>
  <input type="text" name="token" pattern="\d{6}" required placeholder="123456"/><br/><br/>
  <div class="actions"><button class="primary" type="submit">Verify</button></div>
</form>
